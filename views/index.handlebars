<h2>Tacos Not Picked Up</h2>

<ul>
  {{#each tacos}}
    {{#unless picked_up}}

        {{> tacos/taco-block}}
    
    {{/unless}}
  {{/each}}
</ul>

<h2>Picked Up Tacos</h2>

<ul>
  {{#each tacos}}
    {{#if picked_up}}

        {{> tacos/taco-block}}

    {{/if}}
  {{/each}}
</ul>

<h2>Add a Taco</h2>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Taco Name:</label>
        <input type="text" id="ca" name="taco_name">
    </div>

    <div class="form-group">

        <label for="shell">Shell Type</label><br>
        <select name="shell">
            <option value="corn">Corn</option>
            <option value="flour">Flour</option>
        </select>

        <label for="vegetarian">Vegetarian?</label><br>
        <input type="radio" name="vegetarian" value="1" checked> Yes<br>
        <input type="radio" name="vegetarian" value="0"> No

        <label for="picked_up">Picked Up?</label><br>
        <input type="radio" name="picked_up" value="1" checked> Picked Up<br>
        <input type="radio" name="picked_up" value="0"> Not Picked Up

    </div>

    <button type="submit">Add Taco</button>
    
</form>